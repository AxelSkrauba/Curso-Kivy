<ClickableTextFieldRound>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        hint_text: root.hint_text
        password: True
        on_text: root.text = self.text

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True

<LoginScreen>:
    MDRelativeLayout:
        Image:
            source: 'logo.png'  # Agrega tu logo aquí
            size_hint: None, None
            size: "100dp", "100dp"
            pos_hint: {"center_x": 0.5, 'top': 0.9}

        MDBoxLayout:
            orientation: "vertical"
            spacing: "10dp"
            size_hint: None, None
            width: "300dp"
            height: self.minimum_height  # Ajustar automáticamente la altura
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            
            MDLabel:
                text: "Iniciar sesión"
                font_style: "H4"
                halign: "center"

            MDTextField:
                id: username
                hint_text: "Usuario"
                icon_right: "account"
                multiline: False

            ClickableTextFieldRound:
                id: password
                hint_text: "Contraseña"
                icon_left: "key-variant"
                password: True
                multiline: False

            MDLabel:
                id: info_label
                text: ""
                halign: "center"
        
        MDRaisedButton:
            text: "Iniciar sesión"
            size_hint: None, None
            size: "150dp", "50dp"
            pos_hint: {"center_x": 0.5, "y": 0.1}
            on_release: app.root.login()